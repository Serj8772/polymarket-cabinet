# ──────────────────────────────────────────
# Production Environment Variables
# Copy to .env and fill in real values
# ──────────────────────────────────────────

# Database
DATABASE_URL=postgresql+asyncpg://postgres:CHANGE_ME@db:5432/polymarket
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=polymarket

# Redis
REDIS_URL=redis://redis:6379/0

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

# Fernet key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=CHANGE_ME_GENERATE_WITH_FERNET

# CORS - your frontend domain
ALLOWED_ORIGINS=["https://your-domain.com"]

# Logging
LOG_LEVEL=INFO
